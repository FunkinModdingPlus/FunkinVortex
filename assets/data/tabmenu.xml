<?xml version="1.0" encoding="utf-8" ?>
<tabview width="300" height="400">
    <vbox text="Display Info">

        <label style="font-size: 11px;" text="Player 1"/>
        <textfield placeholder="boyfriend" id="bfText" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="Player 2"/>
        <textfield placeholder="dad" id="enemyText" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="Girlfriend"/>
        <textfield placeholder="gf" id="gfText" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="Stage"/>
        <textfield placeholder="stage" id="stageText" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="Cutscene Type"/>
        <textfield placeholder="none" id="cutsceneText" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="UI Type"/>
        <textfield placeholder="normal" id="uiText" style="font-size: 11px;"/>
    </vbox>
    <vbox text="Note Info">
        <label style="font-size: 11px;" text="Alt Anim Num"/>
        <number-stepper max="999" id="altnotestep" style="font-size: 11px;"/>
        <checkbox text="Is Alt Note" id="altnotecheck"/>
        <label style="font-size: 11px;" text="Heal Multiplier"/>
        <number-stepper pos="1" step="0.1" precision="2" id="noteheal" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="Damage Multiplier"/>
        <number-stepper pos="1" step="0.1" precision="2" id="notehurt" style="font-size: 11px;"/>
        <checkbox  text="Consistent Heal" id="consistentHealth"/>
        <label style="font-size: 11px;" text="Timing Multiplier"/>
        <number-stepper pos="1" step="0.1" precision="2" id="notetiming" style="font-size: 11px;"/>
        <checkbox text="Should be sung" id="shouldSing"/>
        <checkbox text="Ignore health mods" id="ignoreMods"/>
        <label style="font-size: 11px;" text="Anim Suffix/Spritesheet frame"/>
        <textfield placeholder="" id="animSuffix" style="font-size: 11px;"/>
    </vbox>
    <vbox text="Section Info">
        <label style="font-size: 11px;" text="Section Length"/>
        <number-stepper step="4" id="sectionlength" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="Section Bpm"/>
        <number-stepper id="sectionbpm" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="Alt Anim Num"/>
        <number-stepper max="999" id="altsection" style="font-size: 11px;"/>
        <button id="swapsection" text="Swap Section" />
        <label style="font-size: 11px;" text="Copy Section Num"/>
        <number-stepper id="copyid" style="font-size: 11px;"/>
        <button id="copysection" text="Copy Section"/>
        
        <checkbox text="Must hit section" id="musthitsection"/>
        <checkbox text="Change BPM" id="changebpmsection"/>
        <button text="Add Section" id="addsection"/>
        <button text="Clear Section" id="clearsection"/>
    </vbox>
    <vbox text="Song Info">
        <label style="font-size: 11px;" text="Song Title"/>
        <textfield placeholder="Test" id="songTitle" style="font-size: 11px;"/>
        <checkbox text="Needs Voices" id="needsVoices"/>
        <checkbox text="Always use Judgements" id="forceJudgements"/>
        <checkbox text="Convert Mines to Nukes" id="convertMines"/>
        <checkbox text="Mute Inst in Editor" id="muteInst"/>
        <checkbox text="Is Spooky (thorns dad trail)" id="isspooky"/>
        <checkbox text="Is Moody (Roses Fangirls)" id="ismoody"/>
        <checkbox text="Is Hey (Bopeebo)" id="ishey"/>
        <checkbox text="Is Cheer" id="ischeer"/>
        <label style="font-size: 11px;" text="Speed"/>
        <number-stepper step="0.1" max="10" min="0.1" precision="1" id="songspeed" style="font-size: 11px;"/>
        <label style="font-size: 11px;" text="Bpm"/>
        <number-stepper max="339" min="1" id="songbpm" style="font-size: 11px;"/>

    </vbox>
</tabview>